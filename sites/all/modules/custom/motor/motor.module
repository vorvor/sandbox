/**
 * User track
 */
function motor_page_alter() {
  global $user;
  if ($user->uid !==0 && $user->uid !== 1) {
    $prevtime = variable_get($user->name . '_time', 0);
    $diff = 0;
    if ($prevtime != 0) {
      $diff = $prevtime - time();
      variable_set($user->name . '_time', time());
    }
    $data = array(
      'user-name' => $user->name,
      'time' => date('Y-m-d H:i:s'),
      'diff-min' => $diff / 60,
      'path' => current_path(),
    );
    watchdog('user-track', print_r($data, 1));
  }
}

